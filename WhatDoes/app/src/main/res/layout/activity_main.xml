<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_back"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp">
            <TextView
                android:id="@+id/muserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="kullanıcı adı"
                android:textColorHint="#d4d4d4"
                android:textColor="#fff"
                android:textSize="22sp"/>
            <TextView
                android:id="@+id/muserStatus"
                android:layout_below="@+id/muserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Durum"
                android:textColorHint="#d4d4d4"
                android:textColor="#D8D8D8"
                android:textSize="15sp"
                android:layout_marginTop="10dp"/>
            
            <com.mikhaellopez.circularimageview.CircularImageView

                android:id="@+id/main_profile_image"
                android:layout_alignParentRight="true"
                android:layout_width="62dp"
                android:src="@drawable/default_profile"
                android:layout_height="62dp" />


        </RelativeLayout>
        
        
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnOrderPreserved="false"
            android:alignmentMode="alignMargins"
            android:paddingTop="20dp"
            android:rowCount="3"
            android:columnCount="2">

            <android.support.v7.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/gorevler"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/todolist_icon" />

                    <TextView
                        android:textSize="18sp"
                        android:text="Görevler"
                        android:textColor="#6f6f6f"
                        android:layout_marginTop="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/takvim"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/calender_icon"/>

                    <TextView
                        android:textSize="18sp"
                        android:text="Takvim"
                        android:textColor="#6f6f6f"
                        android:layout_marginTop="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

             <android.support.v7.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/mesajlar"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/chat_icon"/>

                    <TextView
                        android:textSize="18sp"
                        android:text="Mesajlarım"
                        android:textColor="#6f6f6f"
                        android:layout_marginTop="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

             <android.support.v7.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/toluluk"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/group_icon"/>

                    <TextView
                        android:textSize="18sp"
                        android:text="Topluluklar"
                        android:textColor="#6f6f6f"
                        android:layout_marginTop="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

             <android.support.v7.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/kisiler"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/friends_icon"/>

                    <TextView
                        android:textSize="18sp"
                        android:text="Kişiler"
                        android:textColor="#6f6f6f"
                        android:layout_marginTop="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

             <android.support.v7.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/rehber"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/icon_contacts"/>

                    <TextView
                        android:textSize="18sp"
                        android:text="Rehberim"
                        android:textColor="#6f6f6f"
                        android:layout_marginTop="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

             <android.support.v7.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/ayarlar"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/setting_icon"/>

                    <TextView
                        android:textSize="18sp"
                        android:text="Ayarlar"
                        android:textColor="#6f6f6f"
                        android:layout_marginTop="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

             <android.support.v7.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/logout"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/logout_icon"/>

                    <TextView
                        android:textSize="18sp"
                        android:text="Çıkış"
                        android:textColor="#6f6f6f"
                        android:layout_marginTop="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </GridLayout>

    </LinearLayout>
</ScrollView>